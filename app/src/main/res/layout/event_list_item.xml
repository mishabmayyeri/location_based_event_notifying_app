<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    app:cardBackgroundColor="@color/bg_color"
    app:cardCornerRadius="4dp"
    android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:background="@drawable/curved_bg">

        <TextView
            android:id="@+id/event_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Username"
            android:textStyle="bold"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/event_title"
            style="@style/dhishna_tec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_image"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/text_color"
            android:text="@string/dhishna_tec"
            android:textStyle="bold"
            android:maxLength="18"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:scaleType="center"
            android:layout_margin="8dp"
            android:src="@drawable/ic_location_on_black_24dp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/event_title"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/location"
            style="@style/soe_cusat"
            android:textColor="@color/greyColour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_title"
            android:layout_marginLeft="40dp"
            android:maxLines="1"
            android:layout_marginTop="12dp"
            android:text="@string/soe_cusat"
            android:ellipsize="end"
            android:textSize="12sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@+id/event_image"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/event_date"
            android:backgroundTint="@color/action_color"
            android:background="@drawable/ic_calendar_black_24dp" />

        <TextView
            android:id="@+id/event_date"
            style="@style/soe_cusat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_image"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/event_date"
            android:textColor="@color/action_color"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"

            android:textSize="12sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/event_user_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"

            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            android:alpha="0.9"
            android:layout_marginTop="175dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ellipse" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="16dp"
            android:visibility="invisible"
            android:id="@+id/event_participated">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="0dp"
            android:id="@+id/event_participated_img"
            android:foregroundTint="@color/white"
            android:src="@drawable/ic_check" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/desc"
            style="@style/soe_cusat"
            android:textColor="@color/greyColour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="@string/soe_cusat"
            android:textSize="12sp" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>